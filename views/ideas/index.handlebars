{{#each ideas}}
<div class="card card-body mb-2">
  <h4>{{title}}</h4>
  <p>{{details}}</p>
  <a href="/ideas/edit/{{id}}" class="btn btn-dark btn-block mb-2">Edit</a>
  <form action="/ideas/{{id}}?_method=DELETE" method="post">
    <input type="hidden" method="DELETE">
    <input type="submit" class="btn btn-danger btn-block" value="Delete">
  </form>
</div>
{{else}}
<p class="alert alert-danger">No video ideas listed</p>
{{/each}}